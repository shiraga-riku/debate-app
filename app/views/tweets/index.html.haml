    - @tweets.each do |tweet|
      .content_post{style: "background-image: url(#{tweet.image});"}
        .more
          %ul.more_list
            %li
              = link_to 'ディベートする', "/tweets/#{tweet.id}"
        %span.title
          = tweet.title
        .link
          -if tweet.link 
            = link_to 'サイトのリンク', tweet.link
        = simple_format(tweet.text)
        %span 投稿者
        = tweet.user.nickname
    = paginate(@tweets)